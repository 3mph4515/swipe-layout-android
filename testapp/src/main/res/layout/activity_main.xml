<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.rambler.swipe_layout.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!--1-->
        <ru.rambler.libs.swipe_layout.SwipeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/center_bg">

                <TextView
                    style="@style/CenterTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Left &amp; Right" />

                <TextView
                    style="@style/CenterTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="@string/arrow_left_right" />

            </LinearLayout>

            <!--RIGHT-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/right_bg"
                android:orientation="horizontal"
                app:bring_to_clamp="150dp"
                app:clamp="self"
                app:gravity="right"
                app:sticky="100dp">

                <TextView
                    style="@style/RightTextView"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="#1000"
                    android:text="sticky=100dp" />

                <TextView
                    style="@style/RightTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="bring_to_clamp=150dp; clamp=self; width=match_parent" />

            </LinearLayout>

            <!--LEFT-->
            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@color/left_bg"
                app:bring_to_clamp="100dp"
                app:clamp="self"
                app:gravity="left"
                app:sticky="none">

                <TextView
                    style="@style/LeftTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="bring_to_clamp=100dp; clamp=self; width=200dp; sticky=none" />
            </FrameLayout>
        </ru.rambler.libs.swipe_layout.SwipeLayout>

        <include layout="@layout/layout_separator" />

        <!--2-->
        <ru.rambler.libs.swipe_layout.SwipeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@color/center_bg">

                <TextView
                    style="@style/CenterTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Only Right" />
                <TextView
                    style="@style/CenterTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="@string/arrow_left" />

            </LinearLayout>

            <!--RIGHT-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/right_bg"
                app:bring_to_clamp="200dp"
                app:clamp="parent"
                app:gravity="right"
                app:sticky="170dp">

                <TextView
                    style="@style/RightTextView"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:background="#1000"
                    android:text="sticky=170dp" />

                <TextView
                    style="@style/RightTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="bring_to_clamp=200dp; clamp=self; width=match_parent" />


            </LinearLayout>
        </ru.rambler.libs.swipe_layout.SwipeLayout>

        <include layout="@layout/layout_separator" />

        <!--3-->
        <ru.rambler.libs.swipe_layout.SwipeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/center_bg">

                <TextView
                    style="@style/CenterTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Only Left" />

                <TextView
                    style="@style/CenterTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="@string/arrow_right" />

            </LinearLayout>

            <!--LEFT-->
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:background="@color/left_bg"
                android:orientation="horizontal"
                app:bring_to_clamp="150dp"
                app:clamp="parent"
                app:gravity="left"
                app:sticky="100dp"
                app:sticky_sensitivity="0.5">



                <TextView
                    style="@style/LeftTextView"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:textSize="12dp"
                    android:text="bring_to_clamp=150dp; clamp=parent; width=200dp" />

                <TextView
                    style="@style/LeftTextView"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="#1000"
                    android:text="sticky=100dp" />


            </LinearLayout>
        </ru.rambler.libs.swipe_layout.SwipeLayout>

        <include layout="@layout/layout_separator" />

    </LinearLayout>

</ScrollView>
